<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Corals_SMTP::main" title="SMTP Pro" sortOrder="200">
                    <resource id="Corals_SMTP::dashboard" title="Dashboard &amp; Statistics" sortOrder="5"/>
                    <resource id="Corals_SMTP::logs" title="Email Logs" sortOrder="10"/>
                    <resource id="Corals_SMTP::config" title="Configuration" sortOrder="20"/>
                    <resource id="Corals_SMTP::test" title="Test Email" sortOrder="30"/>
                </resource>
                <resource id="Magento_Backend::stores" title="Stores">
                    <resource id="Magento_Backend::stores_settings" title="Settings">
                        <resource id="Magento_Backend::config" title="Configuration">
                            <resource id="Corals_SMTP::system_config" title="SMTP Configuration"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
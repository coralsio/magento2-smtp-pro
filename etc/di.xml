<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Framework\Mail\TransportInterface" type="Corals\SMTP\Model\Transport"/>
    
    <type name="Corals\SMTP\Model\Transport">
        <arguments>
            <argument name="providers" xsi:type="array">
                <item name="gmail" xsi:type="object">Corals\SMTP\Model\Provider\Gmail</item>
                <item name="sendgrid" xsi:type="object">Corals\SMTP\Model\Provider\SendGrid</item>
                <item name="mailgun" xsi:type="object">Corals\SMTP\Model\Provider\Mailgun</item>
                <item name="amazon_ses" xsi:type="object">Corals\SMTP\Model\Provider\AmazonSes</item>
                <item name="postmark" xsi:type="object">Corals\SMTP\Model\Provider\Postmark</item>
            </argument>
        </arguments>
    </type>
    
    <virtualType name="CoralsSmtpEmailMessageInterface" type="Magento\Framework\Mail\EmailMessage">
        <arguments>
            <argument name="encoding" xsi:type="string">utf-8</argument>
        </arguments>
    </virtualType>
    
    <type name="Magento\Framework\Mail\Template\TransportBuilder">
        <plugin name="corals_smtp_transport_builder" type="Corals\SMTP\Plugin\Mail\TransportBuilderPlugin"/>
    </type>
    
    <type name="Corals\SMTP\Console\Command\TestEmailCommand">
        <arguments>
            <argument name="config" xsi:type="object">Corals\SMTP\Helper\Config</argument>
        </arguments>
    </type>
    
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="corals_smtp_test" xsi:type="object">Corals\SMTP\Console\Command\TestEmailCommand</item>
            </argument>
        </arguments>
    </type>
</config>
<script>
require(['jquery'], function($) {
    window.sendTestEmail = function() {
        var emailInput = $('#test_email_address');
        var button = $('#send_test_email');
        var buttonText = button.find('.button-text');
        var buttonIcon = button.find('.button-icon');
        var spinner = button.find('.loading-spinner');
        var resultDiv = $('#test_result');
        
        var email = emailInput.val().trim();
        
        if (!email) {
            showResult('error', '<?= $block->escapeJs(__('Please enter an email address.')) ?>');
            return;
        }
        
        if (!validateEmail(email)) {
            showResult('error', '<?= $block->escapeJs(__('Please enter a valid email address.')) ?>');
            return;
        }
        
        // Show loading state
        button.prop('disabled', true);
        buttonText.hide();
        buttonIcon.hide();
        spinner.show();
        resultDiv.hide();
        
        $.ajax({
            url: '<?= $block->escapeUrl($block->getTestEmailUrl()) ?>',
            type: 'POST',
            dataType: 'json',
            data: {
                test_email: email,
                form_key: window.FORM_KEY
            },
            success: function(response) {
                if (response.success) {
                    showResult('success', response.message);
                } else {
                    var errorMessage = response.message;
                    // Add technical details toggle if available
                    if (response.technical_details && response.technical_details !== response.message) {
                        errorMessage += '<div style="margin-top: 15px;">';
                        errorMessage += '<button type="button" onclick="toggleTechnicalDetails()" class="toggle-details-btn">';
                        errorMessage += 'üîß Show Technical Details';
                        errorMessage += '</button>';
                        errorMessage += '<div id="technical-details" style="display: none; margin-top: 10px; padding: 10px; background: #f8f9fa; border-left: 3px solid #dc3545; font-family: monospace; font-size: 12px; white-space: pre-wrap;">';
                        errorMessage += response.technical_details;
                        errorMessage += '</div>';
                        errorMessage += '</div>';
                    }
                    showResult('error', errorMessage);
                }
            },
            error: function(xhr, status, error) {
                var errorMsg = '‚ùå Communication error occurred. ';
                if (xhr.status === 404) {
                    errorMsg += 'Test email endpoint not found.';
                } else if (xhr.status === 500) {
                    errorMsg += 'Server error - please check logs.';
                } else if (xhr.status === 403) {
                    errorMsg += 'Access denied - please check permissions.';
                } else {
                    errorMsg += 'Please check your connection and try again.';
                }
                showResult('error', errorMsg);
            },
            complete: function() {
                // Hide loading state
                button.prop('disabled', false);
                buttonText.show();
                buttonIcon.show();
                spinner.hide();
            }
        });
    };
    
    function showResult(type, message) {
        var resultDiv = $('#test_result');
        resultDiv.removeClass('success error').addClass(type);
        resultDiv.html(message);
        resultDiv.show();
        
        // Auto-hide success messages after 5 seconds
        if (type === 'success') {
            setTimeout(function() {
                resultDiv.fadeOut();
            }, 5000);
        }
    }
    
    function validateEmail(email) {
        var re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
    }
    
    // Allow enter key to send test email
    $('#test_email_address').on('keypress', function(e) {
        if (e.which === 13) {
            sendTestEmail();
        }
    });
    
    // Toggle technical details function (global scope)
    window.toggleTechnicalDetails = function() {
        var detailsDiv = $('#technical-details');
        var button = $('.toggle-details-btn');
        
        if (detailsDiv.is(':visible')) {
            detailsDiv.slideUp();
            button.html('üîß Show Technical Details');
        } else {
            detailsDiv.slideDown();
            button.html('üîß Hide Technical Details');
        }
    };
});
</script>

